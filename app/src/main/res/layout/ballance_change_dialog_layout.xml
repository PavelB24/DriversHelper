<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary_color">


    <TextView
        android:id="@+id/movement_type_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:gravity="center"
        android:text="Select the category"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/value_consume_edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/movement_type_title_text_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/value_consume_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Insert value"
            android:inputType="number"
            android:maxLength="5" />
    </com.google.android.material.textfield.TextInputLayout>

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_consume_edit_text_layout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_margin="16dp">

            <ImageButton
                android:id="@+id/fuel_image_button"
                android:layout_weight="1"
                android:backgroundTint="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_dispenser_fuel" />

            <ImageButton
                android:id="@+id/spare_parts_image_button"
                android:layout_weight="1"
                android:backgroundTint="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_spare_parts" />

            <ImageButton
                android:id="@+id/food_image_button"
                android:layout_weight="1"
                android:backgroundTint="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_food" />

            <ImageButton
                android:id="@+id/repair_image_button"
                android:layout_weight="1"
                android:backgroundTint="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_car_repair" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_margin="16dp">

            <ImageButton
                android:id="@+id/tax_image_button"
                android:layout_weight="1"
                android:backgroundTint="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_tax" />

            <ImageButton
                android:id="@+id/evacuation_image_button"
                android:layout_weight="1"
                android:backgroundTint="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_tow_truck_evacuation" />

            <ImageButton
                android:id="@+id/fine_image_button"
                android:layout_weight="1"
                android:backgroundTint="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_police_fine" />

            <ImageButton
                android:id="@+id/other_image_button"
                android:backgroundTint="?selectableItemBackgroundBorderless"
                android:layout_weight="1"

                />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>